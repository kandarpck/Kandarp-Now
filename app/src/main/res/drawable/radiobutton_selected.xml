<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape>
            <gradient android:angle="270" android:endColor="#00FFFFFF" android:startColor="#00FFFFFF" />

        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <gradient android:angle="270" android:endColor="#14000000" android:startColor="#14000000" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#24000000" android:startColor="#24FF0000" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="#00000000" android:startColor="#00000000" />
        </shape>
    </item>


</selector>