<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/expired_reminders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:padding="8dp"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/expired_reminders_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/expired_empty" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/expired_reminders_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_content_discard"
        android:visibility="gone"
        fab:fab_colorNormal="@color/red_600"
        fab:fab_colorPressed="@color/red_400"
        fab:fab_colorRipple="@color/red_400" />

</FrameLayout>